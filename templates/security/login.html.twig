{% extends 'layouts/auth.html.twig' %}

{% block title %}Entrar | Admin{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="mb-6 p-4 rounded-xl bg-red-50 dark:bg-red-950/20 text-red-600 text-sm font-bold border border-red-100 dark:border-red-900/30">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <h1 class="text-xl font-bold mb-6 text-slate-900 dark:text-white">Acesse sua conta</h1>

    <div class="space-y-4">
        <div>
            <label for="inputEmail" class="block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2 ml-1">E-mail</label>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400">
                    {{ ux_icon('lucide:mail', {class: 'w-5 h-5'}) }}
                </div>
                <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="block w-full pl-12 pr-4 py-3 bg-slate-50 dark:bg-slate-800 border-none rounded-2xl focus:ring-2 focus:ring-primary/20 focus:bg-white dark:focus:bg-slate-700 transition-all outline-none" autocomplete="email" required autofocus placeholder="exemplo@email.com">
            </div>
        </div>

        <div>
            <label for="inputPassword" class="block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2 ml-1">Senha</label>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400">
                    {{ ux_icon('lucide:lock', {class: 'w-5 h-5'}) }}
                </div>
                <input type="password" name="_password" id="inputPassword" class="block w-full pl-12 pr-4 py-3 bg-slate-50 dark:bg-slate-800 border-none rounded-2xl focus:ring-2 focus:ring-primary/20 focus:bg-white dark:focus:bg-slate-700 transition-all outline-none" autocomplete="current-password" required placeholder="••••••••">
            </div>
        </div>

    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class="flex items-center justify-between mt-6 mb-8 text-sm">
        <label class="flex items-center space-x-2 text-slate-500 cursor-pointer">
            <input type="checkbox" name="_remember_me" class="w-4 h-4 rounded border-slate-300 text-primary focus:ring-primary">
            <span>Lembrar-me</span>
        </label>
        <a href="#" class="text-primary font-bold hover:underline">Esqueceu a senha?</a>
    </div>

    <button class="w-full bg-primary text-white py-4 rounded-2xl font-bold shadow-lg shadow-primary/25 hover:bg-primary/90 hover:scale-[1.02] active:scale-[0.98] transition-all" type="submit">
        Entrar no Painel
    </button>
</form>
{% endblock %}
