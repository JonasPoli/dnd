{% extends 'base_admin.html.twig' %}

{% block header_title %}Magias{% endblock %}

{% block body %}
<div class="mb-8 flex items-center justify-between">
    <div>
        <h1 class="text-2xl font-bold dark:text-white">Grim√≥rio de Magias</h1>
        <p class="text-slate-500 text-sm">{{ total_items }} magias catalogadas.</p>
    </div>
    <a href="{{ path('admin_spell_new') }}" class="bg-primary text-white px-6 py-3 rounded-2xl font-bold shadow-lg shadow-primary/25 hover:bg-primary/90 transition-all flex items-center space-x-2">
        {{ ux_icon('lucide:plus', {class: 'w-5 h-5'}) }}
        <span>Nova Magia</span>
    </a>
</div>

{# Compact Filters Panel #}
<div class="mb-6 bg-white dark:bg-slate-900 rounded-2xl border border-border p-4 shadow-sm">
    <form method="get" class="space-y-3">
        <div class="grid grid-cols-1 lg:grid-cols-6 gap-3">
            {# Search #}
            <div class="lg:col-span-2">
                <input type="text" name="search" value="{{ search }}" placeholder="üîç Buscar por nome ou descri√ß√£o..." 
                       class="w-full px-3 py-2 bg-white dark:bg-slate-800 border border-slate-300 dark:border-slate-700 rounded-xl text-sm focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none">
            </div>
            
            {# Level #}
            <div>
                <select name="level" class="w-full px-3 py-2 bg-white dark:bg-slate-800 border border-slate-300 dark:border-slate-700 rounded-xl text-sm focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none">
                    <option value="">N√≠vel</option>
                    {% for i in 0..9 %}
                        <option value="{{ i }}" {% if i == level_filter %}selected{% endif %}>{{ i == 0 ? 'Truque' : 'N√≠vel ' ~ i }}</option>
                    {% endfor %}
                </select>
            </div>
            
            {# School #}
            <div>
                <select name="school" class="w-full px-3 py-2 bg-white dark:bg-slate-800 border border-slate-300 dark:border-slate-700 rounded-xl text-sm focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none">
                    <option value="">Escola</option>
                    {% for school in available_schools %}
                        <option value="{{ school }}" {% if school == school_filter %}selected{% endif %}>{{ school }}</option>
                    {% endfor %}
                </select>
            </div>
            
            {# Class #}
            <div>
                <select name="class" class="w-full px-3 py-2 bg-white dark:bg-slate-800 border border-slate-300 dark:border-slate-700 rounded-xl text-sm focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none">
                    <option value="">Classe</option>
                    {% for class in available_classes %}
                        <option value="{{ class.id }}" {% if class.id == class_filter %}selected{% endif %}>{{ class.name }}</option>
                    {% endfor %}
                </select>
            </div>
            
            {# Actions #}
            <div class="flex gap-2">
                <button type="submit" class="flex-1 px-4 py-2 bg-primary text-white rounded-xl text-sm font-semibold hover:bg-primary/90 transition-all">
                    Filtrar
                </button>
                {% if search or level_filter or school_filter or class_filter %}
                <a href="{{ path('admin_spell_index') }}" class="px-3 py-2 bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 rounded-xl transition-all flex items-center" title="Limpar filtros">
                    {{ ux_icon('lucide:x', {class: 'w-4 h-4'}) }}
                </a>
                {% endif %}
            </div>
        </div>
    </form>
</div>

<div class="bg-white dark:bg-slate-900 rounded-3xl border border-border overflow-hidden shadow-sm">
    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead>
                <tr class="bg-slate-50 dark:bg-slate-800/50 border-b border-border">
                    <th class="px-8 py-5 text-[10px] font-bold uppercase tracking-widest text-slate-400">Nome / Escola</th>
                    <th class="px-8 py-5 text-[10px] font-bold uppercase tracking-widest text-slate-400">N√≠vel</th>
                    <th class="px-8 py-5 text-[10px] font-bold uppercase tracking-widest text-slate-400">Conjura√ß√£o</th>
                    <th class="px-8 py-5 text-[10px] font-bold uppercase tracking-widest text-slate-400">Alcance</th>
                    <th class="px-8 py-5 text-[10px] font-bold uppercase tracking-widest text-slate-400 text-right">A√ß√µes</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-border">
                {% for spell in spells %}
                    <tr class="hover:bg-slate-50/50 dark:hover:bg-slate-800/30 transition-colors">
                        <td class="px-8 py-5">
                            <div class="font-bold text-slate-900 dark:text-white">{{ spell.name }}</div>
                            <div class="text-xs text-slate-400">{{ spell.school }}</div>
                        </td>
                        <td class="px-8 py-5">
                            <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-900 dark:text-purple-200 rounded-full font-bold text-sm">
                                {{ spell.level == 0 ? 'Truque' : spell.level }}
                            </span>
                        </td>
                        <td class="px-8 py-5">
                            <span class="text-sm">{{ spell.castingTime }}</span>
                        </td>
                        <td class="px-8 py-5">
                            <span class="text-sm">{{ spell.spellRange }}</span>
                        </td>
                        <td class="px-8 py-5 text-right">
                            <div class="flex items-center justify-end space-x-3">
                                <a href="{{ path('admin_spell_edit', {'id': spell.id}) }}" class="p-2 bg-slate-100 dark:bg-slate-800 rounded-xl text-slate-500 hover:text-primary transition-colors">
                                    {{ ux_icon('lucide:edit-3', {class: 'w-5 h-5'}) }}
                                </a>
                                {{ include('admin/spell/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="px-8 py-12 text-center text-slate-400">
                            {% if search or level_filter or school_filter or class_filter %}
                                Nenhuma magia encontrada com os filtros aplicados.
                            {% else %}
                                Nenhuma magia encontrada.
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    
    {# Pagination #}
    {% if total_pages > 1 %}
    <div class="px-8 py-5 border-t border-border bg-slate-50/50 dark:bg-slate-800/30">
        <div class="flex items-center justify-between">
            <div class="text-sm text-slate-500">
                Mostrando {{ spells|length }} de {{ total_items }} magias
            </div>
            <div class="flex items-center space-x-2">
                {% if current_page > 1 %}
                <a href="{{ path('admin_spell_index', {page: current_page - 1, search: search, level: level_filter, school: school_filter, class: class_filter}) }}" 
                   class="px-4 py-2 bg-white dark:bg-slate-800 border border-border rounded-xl hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
                    Anterior
                </a>
                {% endif %}
                
                {% for page in 1..total_pages %}
                    {% if page == current_page %}
                    <span class="px-4 py-2 bg-primary text-white rounded-xl font-semibold">{{ page }}</span>
                    {% elseif page == 1 or page == total_pages or (page >= current_page - 2 and page <= current_page + 2) %}
                    <a href="{{ path('admin_spell_index', {page: page, search: search, level: level_filter, school: school_filter, class: class_filter}) }}" 
                       class="px-4 py-2 bg-white dark:bg-slate-800 border border-border rounded-xl hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
                        {{ page }}
                    </a>
                    {% elseif page == current_page - 3 or page == current_page + 3 %}
                    <span class="px-2 text-slate-400">...</span>
                    {% endif %}
                {% endfor %}
                
                {% if current_page < total_pages %}
                <a href="{{ path('admin_spell_index', {page: current_page + 1, search: search, level: level_filter, school: school_filter, class: class_filter}) }}" 
                   class="px-4 py-2 bg-white dark:bg-slate-800 border border-border rounded-xl hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
                    Pr√≥xima
                </a>
                {% endif %}
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
