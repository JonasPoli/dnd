    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ class_def.id) }}">
    <button class="p-2 bg-red-50 dark:bg-red-950/20 text-red-600 hover:bg-red-100 dark:hover:bg-red-900/30 rounded-xl transition-all">
        {{ ux_icon('lucide:trash-2', {class: 'w-5 h-5'}) }}
    </button>
</form>
