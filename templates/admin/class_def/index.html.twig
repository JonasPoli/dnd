{% extends 'base_admin.html.twig' %}

{% block header_title %}Classes{% endblock %}

{% block body %}
<div class="mb-8 flex items-center justify-between">
    <div>
        <h1 class="text-2xl font-bold dark:text-white">Classes de Personagem</h1>
        <p class="text-slate-500 text-sm">Gerencie as classes disponíveis para criação de personagens.</p>
    </div>
    <a href="{{ path('admin_class_new') }}" class="bg-primary text-white px-6 py-3 rounded-2xl font-bold shadow-lg shadow-primary/25 hover:bg-primary/90 transition-all flex items-center space-x-2">
        {{ ux_icon('lucide:plus', {class: 'w-5 h-5'}) }}
        <span>Nova Classe</span>
    </a>
</div>

<div class="bg-white dark:bg-slate-900 rounded-3xl border border-border overflow-hidden shadow-sm">
    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead>
                <tr class="bg-slate-50 dark:bg-slate-800/50 border-b border-border">
                    <th class="px-8 py-5 text-[10px] font-bold uppercase tracking-widest text-slate-400">Nome / Chave</th>
                    <th class="px-8 py-5 text-[10px] font-bold uppercase tracking-widest text-slate-400">Dado de Vida</th>
                    <th class="px-8 py-5 text-[10px] font-bold uppercase tracking-widest text-slate-400">Fonte</th>
                    <th class="px-8 py-5 text-[10px] font-bold uppercase tracking-widest text-slate-400 text-right">Ações</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-border">
                {% for class_def in class_defs %}
                    <tr class="hover:bg-slate-50/50 dark:hover:bg-slate-800/30 transition-colors">
                        <td class="px-8 py-5">
                            <div class="font-bold text-slate-900 dark:text-white">{{ class_def.name }}</div>
                            <div class="text-xs text-slate-400">{{ class_def.ruleSlug }}</div>
                        </td>
                        <td class="px-8 py-5">
                            <span class="px-3 py-1 bg-slate-100 dark:bg-slate-800 rounded-lg text-xs font-semibold">
                                d{{ class_def.hitDie }}
                            </span>
                        </td>
                        <td class="px-8 py-5">
                            <span class="text-sm font-medium">{{ class_def.rulesSource.name ?? 'Desconhecida' }}</span>
                        </td>
                        <td class="px-8 py-5 text-right">
                            <div class="flex items-center justify-end space-x-3">
                                <a href="{{ path('admin_class_show', {'id': class_def.id}) }}" class="p-2 bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 rounded-xl hover:bg-blue-100 dark:hover:bg-blue-900/30 transition-colors" title="Visualizar">
                                    {{ ux_icon('lucide:eye', {class: 'w-5 h-5'}) }}
                                </a>
                                <a href="{{ path('admin_class_edit', {'id': class_def.id}) }}" class="p-2 bg-slate-100 dark:bg-slate-800 rounded-xl text-slate-500 hover:text-primary transition-colors" data-turbo="false">
                                    {{ ux_icon('lucide:edit-3', {class: 'w-5 h-5'}) }}
                                </a>
                                {{ include('admin/class_def/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="px-8 py-12 text-center text-slate-400">
                            Nenhuma classe encontrada.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
