{% extends 'base_admin.html.twig' %}

{% block header_title %}{{ class_def.name }}{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    {# Header Actions #}
    <div class="mb-6 flex items-center justify-between">
        <a href="{{ path('admin_class_index') }}" class="text-slate-400 hover:text-primary transition-colors flex items-center space-x-2 text-sm font-bold uppercase tracking-widest">
            {{ ux_icon('lucide:arrow-left', {class: 'w-4 h-4'}) }}
            <span>Voltar para Lista</span>
        </a>
        <div class="flex items-center space-x-3">
            <a href="{{ path('admin_class_edit', {'id': class_def.id}) }}" class="px-4 py-2 bg-primary text-white rounded-xl font-semibold hover:bg-primary/90 transition-all flex items-center space-x-2">
                {{ ux_icon('lucide:edit-3', {class: 'w-4 h-4'}) }}
                <span>Editar</span>
            </a>
        </div>
    </div>

    {# D&D Class Sheet #}
    <div class="bg-gradient-to-br from-indigo-50 to-purple-50 dark:from-slate-800 dark:to-slate-900 rounded-3xl border-4 border-indigo-900 dark:border-indigo-700 shadow-2xl overflow-hidden">
        {# Header #}
        <div class="bg-gradient-to-r from-indigo-900 to-purple-900 dark:from-indigo-800 dark:to-purple-800 px-8 py-6 border-b-4 border-indigo-950">
            <h1 class="text-4xl font-bold text-indigo-50 mb-2 font-serif">{{ class_def.name }}</h1>
            <p class="text-indigo-200 text-lg italic">Classe de Personagem</p>
        </div>

        <div class="px-8 py-6 space-y-6">
            {# Core Stats #}
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 pb-6 border-b-2 border-indigo-900/30 dark:border-indigo-700/30">
                <div class="text-center bg-white/50 dark:bg-slate-800/50 rounded-2xl p-6 border-2 border-indigo-900/20 dark:border-indigo-700/20">
                    <div class="text-xs font-bold uppercase tracking-wider text-indigo-900 dark:text-indigo-300 mb-2">Dado de Vida</div>
                    <div class="text-5xl font-bold text-indigo-950 dark:text-indigo-100">d{{ class_def.hitDie }}</div>
                </div>
                
                {% if class_def.primaryAbilities %}
                <div class="bg-white/50 dark:bg-slate-800/50 rounded-2xl p-6 border-2 border-indigo-900/20 dark:border-indigo-700/20">
                    <div class="text-xs font-bold uppercase tracking-wider text-indigo-900 dark:text-indigo-300 mb-3">Atributos Primários</div>
                    <div class="flex flex-wrap gap-2">
                        {% for ability in class_def.primaryAbilities %}
                        <span class="px-3 py-1 bg-indigo-100 dark:bg-indigo-900/30 text-indigo-900 dark:text-indigo-200 rounded-lg font-bold text-sm">{{ ability }}</span>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
                
                {% if class_def.savingThrowProficiencies %}
                <div class="bg-white/50 dark:bg-slate-800/50 rounded-2xl p-6 border-2 border-indigo-900/20 dark:border-indigo-700/20">
                    <div class="text-xs font-bold uppercase tracking-wider text-indigo-900 dark:text-indigo-300 mb-3">Testes de Resistência</div>
                    <div class="flex flex-wrap gap-2">
                        {% for save in class_def.savingThrowProficiencies %}
                        <span class="px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-900 dark:text-green-200 rounded-lg font-bold text-sm">{{ save }}</span>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
            </div>

            {# Additional Stats #}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 pb-6 border-b-2 border-indigo-900/30 dark:border-indigo-700/30">
                <div class="bg-white/50 dark:bg-slate-800/50 rounded-2xl p-6 border-2 border-indigo-900/20 dark:border-indigo-700/20 space-y-3">
                    <h3 class="text-sm font-bold uppercase tracking-wider text-indigo-900 dark:text-indigo-300 border-b border-indigo-200 dark:border-indigo-700 pb-2 mb-3">Pontos de Vida</h3>
                    <div class="grid grid-cols-[1fr,2fr] gap-4 text-sm">
                        <span class="font-bold text-slate-600 dark:text-slate-400">Nível 1:</span>
                        <span class="text-slate-900 dark:text-slate-100 font-mono">{{ class_def.hpAt1stLevel }}</span>
                        
                        <span class="font-bold text-slate-600 dark:text-slate-400">Níveis Superiores:</span>
                        <span class="text-slate-900 dark:text-slate-100 font-mono">{{ class_def.hpAtHigherLevels }}</span>
                    </div>
                </div>

                <div class="bg-white/50 dark:bg-slate-800/50 rounded-2xl p-6 border-2 border-indigo-900/20 dark:border-indigo-700/20 space-y-3">
                    <h3 class="text-sm font-bold uppercase tracking-wider text-indigo-900 dark:text-indigo-300 border-b border-indigo-200 dark:border-indigo-700 pb-2 mb-3">Proficiências</h3>
                    <div class="space-y-2 text-sm">
                        {% if class_def.profArmor %}
                        <div class="flex flex-col">
                            <span class="font-bold text-slate-600 dark:text-slate-400 text-xs uppercase">Armaduras</span>
                            <span class="text-slate-900 dark:text-slate-100">{{ class_def.profArmor }}</span>
                        </div>
                        {% endif %}
                        {% if class_def.profWeapons %}
                        <div class="flex flex-col">
                            <span class="font-bold text-slate-600 dark:text-slate-400 text-xs uppercase">Armas</span>
                            <span class="text-slate-900 dark:text-slate-100">{{ class_def.profWeapons }}</span>
                        </div>
                        {% endif %}
                        {% if class_def.profTools %}
                        <div class="flex flex-col">
                            <span class="font-bold text-slate-600 dark:text-slate-400 text-xs uppercase">Ferramentas</span>
                            <span class="text-slate-900 dark:text-slate-100">{{ class_def.profTools }}</span>
                        </div>
                        {% endif %}
                        {% if class_def.profSkills %}
                        <div class="flex flex-col">
                            <span class="font-bold text-slate-600 dark:text-slate-400 text-xs uppercase">Perícias</span>
                            <span class="text-slate-900 dark:text-slate-100">{{ class_def.profSkills }}</span>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            {% if class_def.equipment %}
            <div class="pb-6 border-b-2 border-indigo-900/30 dark:border-indigo-700/30">
                <h3 class="text-lg font-bold text-indigo-900 dark:text-indigo-300 mb-3 flex items-center space-x-2">
                    {{ ux_icon('lucide:backpack', {class: 'w-5 h-5'}) }}
                    <span>Equipamento Inicial</span>
                </h3>
                <div class="bg-white/50 dark:bg-slate-800/50 rounded-2xl p-6 border-2 border-indigo-900/20 dark:border-indigo-700/20 text-slate-900 dark:text-slate-100 prose prose-indigo dark:prose-invert max-w-none js-markdown-content markdown-formatted" data-content="{{ class_def.equipment|e('html_attr') }}">
                </div>
            </div>
            {% endif %}

            {% if class_def.classTableMd %}
            <div class="pb-6 border-b-2 border-indigo-900/30 dark:border-indigo-700/30">
                 <h3 class="text-lg font-bold text-indigo-900 dark:text-indigo-300 mb-3 flex items-center space-x-2">
                    {{ ux_icon('lucide:table', {class: 'w-5 h-5'}) }}
                    <span>Tabela da Classe</span>
                </h3>
                <div class="bg-white/50 dark:bg-slate-800/50 rounded-2xl p-6 border-2 border-indigo-900/20 dark:border-indigo-700/20 overflow-x-auto text-sm prose prose-indigo dark:prose-invert max-w-none js-markdown-content markdown-formatted" data-content="{{ class_def.classTableMd|e('html_attr') }}">
                </div>
            </div>
            {% endif %}

            {% if class_def.characterCreationHelp %}
            <div class="pb-6 border-b-2 border-indigo-900/30 dark:border-indigo-700/30">
                <h3 class="text-2xl font-bold text-indigo-900 dark:text-indigo-300 mb-4 flex items-center space-x-2">
                    {{ ux_icon('lucide:help-circle', {class: 'w-6 h-6'}) }}
                    <span>Ajuda na Criação</span>
                </h3>
                <div class="prose prose-indigo dark:prose-invert max-w-none bg-white/30 dark:bg-slate-800/30 rounded-2xl p-6 border border-indigo-900/20 dark:border-indigo-700/20">
                    <div class="text-indigo-950 dark:text-indigo-100 leading-relaxed js-markdown-content markdown-formatted" data-content="{{ class_def.characterCreationHelp|e('html_attr') }}">
                    </div>
                </div>
            </div>
            {% endif %}

            {% if class_def.descriptionMd %}
            <div>
                <h3 class="text-2xl font-bold text-indigo-900 dark:text-indigo-300 mb-4 flex items-center space-x-2">
                    {{ ux_icon('lucide:book-open', {class: 'w-6 h-6'}) }}
                    <span>Descrição da Classe</span>
                </h3>
                <div class="prose prose-indigo dark:prose-invert max-w-none bg-white/30 dark:bg-slate-800/30 rounded-2xl p-6 border border-indigo-900/20 dark:border-indigo-700/20">
                    <div class="text-indigo-950 dark:text-indigo-100 leading-relaxed js-markdown-content markdown-formatted" data-content="{{ class_def.descriptionMd|e('html_attr') }}">
                    </div>
                </div>
            </div>
            {% endif %}
        </div>

        {# Footer #}
        <div class="bg-gradient-to-r from-indigo-900 to-purple-900 dark:from-indigo-800 dark:to-purple-800 px-8 py-4 border-t-4 border-indigo-950">
            <div class="flex items-center justify-between text-indigo-200 text-sm">
                <span>Fonte: {{ class_def.rulesSource.name }}</span>
                <span class="font-mono">{{ class_def.ruleSlug }}</span>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<script>
    function renderMarkdown() {
        document.querySelectorAll('.js-markdown-content').forEach(el => {
            if (el.dataset.content && !el.dataset.rendered) {
                el.innerHTML = marked.parse(el.dataset.content);
                el.dataset.rendered = 'true';
            }
        });
    }
    
    // Initial load
    renderMarkdown();
    
    // Turbo navigation
    document.addEventListener('turbo:load', renderMarkdown);
</script>
{% endblock %}
