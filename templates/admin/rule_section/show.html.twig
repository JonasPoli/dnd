{% extends 'base_admin.html.twig' %}

{% block header_title %}{{ rule_section.name }}{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    {# Header Actions #}
    <div class="mb-6 flex items-center justify-between">
        <a href="{{ path('admin_rule_section_index') }}" class="text-slate-400 hover:text-primary transition-colors flex items-center space-x-2 text-sm font-bold uppercase tracking-widest">
            {{ ux_icon('lucide:arrow-left', {class: 'w-4 h-4'}) }}
            <span>Voltar para Lista</span>
        </a>
        <div class="flex items-center space-x-3">
            <a href="{{ path('admin_rule_section_edit', {'id': rule_section.id}) }}" class="px-4 py-2 bg-primary text-white rounded-xl font-semibold hover:bg-primary/90 transition-all flex items-center space-x-2">
                {{ ux_icon('lucide:edit-3', {class: 'w-4 h-4'}) }}
                <span>Editar</span>
            </a>
        </div>
    </div>

    {# Rule Section Document #}
    <div class="bg-gradient-to-br from-slate-50 to-gray-50 dark:from-slate-800 dark:to-slate-900 rounded-3xl border-4 border-slate-700 dark:border-slate-600 shadow-2xl overflow-hidden">
        {# Header #}
        <div class="bg-gradient-to-r from-slate-800 to-gray-800 dark:from-slate-700 dark:to-gray-700 px-8 py-6 border-b-4 border-slate-900">
            <h1 class="text-4xl font-bold text-slate-50 mb-2 font-serif">{{ rule_section.name }}</h1>
            <p class="text-slate-300 text-lg italic flex items-center space-x-2">
                {{ ux_icon('lucide:book-open', {class: 'w-5 h-5'}) }}
                <span>Seção de Regras</span>
            </p>
        </div>

        <div class="px-8 py-8">
            {# Content #}
            {% if rule_section.contentMd %}
            <div class="prose prose-slate dark:prose-invert max-w-none bg-white/50 dark:bg-slate-800/50 rounded-2xl p-8 border-2 border-slate-300 dark:border-slate-600 shadow-inner">
                <div class="text-slate-900 dark:text-slate-100 leading-relaxed">
                    {{ rule_section.contentMd|markdown_to_html|raw }}
                </div>
            </div>
            {% else %}
            <div class="text-center py-12 text-slate-400">
                <div class="mb-4">
                    {{ ux_icon('lucide:file-text', {class: 'w-16 h-16 mx-auto opacity-50'}) }}
                </div>
                <p class="text-lg">Nenhum conteúdo disponível para esta seção.</p>
            </div>
            {% endif %}
        </div>

        {# Footer #}
        <div class="bg-gradient-to-r from-slate-800 to-gray-800 dark:from-slate-700 dark:to-gray-700 px-8 py-4 border-t-4 border-slate-900">
            <div class="flex items-center justify-between text-slate-300 text-sm">
                <span>Fonte: {{ rule_section.rulesSource.name }}</span>
                <span class="font-mono">{{ rule_section.ruleSlug }}</span>
            </div>
        </div>
    </div>
</div>
{% endblock %}
