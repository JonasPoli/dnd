{% extends 'base_admin.html.twig' %}

{% block header_title %}Seções de Regras{% endblock %}

{% block body %}
<div class="mb-8 flex items-center justify-between">
    <div>
        <h1 class="text-2xl font-bold dark:text-white">Seções de Regras</h1>
        <p class="text-slate-500 text-sm">Gerencie as seções do livro de regras oficial.</p>
    </div>
    <a href="{{ path('admin_rule_section_new') }}" class="bg-primary text-white px-6 py-3 rounded-2xl font-bold shadow-lg shadow-primary/25 hover:bg-primary/90 transition-all flex items-center space-x-2">
        {{ ux_icon('lucide:plus', {class: 'w-5 h-5'}) }}
        <span>Nova Seção</span>
    </a>
</div>

{# Search Bar #}
<div class="mb-6">
    <form method="get" class="flex gap-3">
        <div class="flex-1">
            <input type="text" name="search" value="{{ search }}" placeholder="Buscar por nome ou conteúdo..." 
                   class="w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-2xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none">
        </div>
        <button type="submit" class="px-6 py-3 bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 rounded-2xl font-semibold transition-all flex items-center space-x-2">
            {{ ux_icon('lucide:search', {class: 'w-5 h-5'}) }}
            <span>Buscar</span>
        </button>
        {% if search %}
        <a href="{{ path('admin_rule_section_index') }}" class="px-6 py-3 bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 rounded-2xl font-semibold transition-all">
            Limpar
        </a>
        {% endif %}
    </form>
</div>

<div class="bg-white dark:bg-slate-900 rounded-3xl border border-border overflow-hidden shadow-sm">
    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead>
                <tr class="bg-slate-50 dark:bg-slate-800/50 border-b border-border">
                    <th class="px-8 py-5 text-[10px] font-bold uppercase tracking-widest text-slate-400">Nome</th>
                    <th class="px-8 py-5 text-[10px] font-bold uppercase tracking-widest text-slate-400">Conteúdo</th>
                    <th class="px-8 py-5 text-[10px] font-bold uppercase tracking-widest text-slate-400 text-right">Ações</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-border">
                {% for section in rule_sections %}
                    <tr class="hover:bg-slate-50/50 dark:hover:bg-slate-800/30 transition-colors">
                        <td class="px-8 py-5">
                            <div class="font-bold text-slate-900 dark:text-white">{{ section.name }}</div>
                        </td>
                        <td class="px-8 py-5">
                            <span class="text-sm text-slate-600 dark:text-slate-400">{{ section.contentMd|default('-')|u.truncate(100, '...') }}</span>
                        </td>
                        <td class="px-8 py-5 text-right">
                            <div class="flex items-center justify-end space-x-3">
                                <a href="{{ path('admin_rule_section_show', {'id': section.id}) }}" class="p-2 bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 rounded-xl hover:bg-blue-100 dark:hover:bg-blue-900/30 transition-colors" title="Visualizar">
                                    {{ ux_icon('lucide:eye', {class: 'w-5 h-5'}) }}
                                </a>
                                <a href="{{ path('admin_rule_section_edit', {'id': section.id}) }}" class="p-2 bg-slate-100 dark:bg-slate-800 rounded-xl text-slate-500 hover:text-primary transition-colors">
                                    {{ ux_icon('lucide:edit-3', {class: 'w-5 h-5'}) }}
                                </a>
                                {{ include('admin/rule_section/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="px-8 py-12 text-center text-slate-400">
                            {% if search %}
                                Nenhuma seção encontrada para "{{ search }}".
                            {% else %}
                                Nenhuma seção de regra encontrada.
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    
    {# Pagination #}
    {% if total_pages > 1 %}
    <div class="px-8 py-5 border-t border-border bg-slate-50/50 dark:bg-slate-800/30">
        <div class="flex items-center justify-between">
            <div class="text-sm text-slate-500">
                Mostrando {{ rule_sections|length }} de {{ total_items }} seções
            </div>
            <div class="flex items-center space-x-2">
                {% if current_page > 1 %}
                <a href="{{ path('admin_rule_section_index', {page: current_page - 1, search: search}) }}" 
                   class="px-4 py-2 bg-white dark:bg-slate-800 border border-border rounded-xl hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
                    Anterior
                </a>
                {% endif %}
                
                {% for page in 1..total_pages %}
                    {% if page == current_page %}
                    <span class="px-4 py-2 bg-primary text-white rounded-xl font-semibold">{{ page }}</span>
                    {% elseif page == 1 or page == total_pages or (page >= current_page - 2 and page <= current_page + 2) %}
                    <a href="{{ path('admin_rule_section_index', {page: page, search: search}) }}" 
                       class="px-4 py-2 bg-white dark:bg-slate-800 border border-border rounded-xl hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
                        {{ page }}
                    </a>
                    {% elseif page == current_page - 3 or page == current_page + 3 %}
                    <span class="px-2 text-slate-400">...</span>
                    {% endif %}
                {% endfor %}
                
                {% if current_page < total_pages %}
                <a href="{{ path('admin_rule_section_index', {page: current_page + 1, search: search}) }}" 
                   class="px-4 py-2 bg-white dark:bg-slate-800 border border-border rounded-xl hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
                    Próxima
                </a>
                {% endif %}
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
