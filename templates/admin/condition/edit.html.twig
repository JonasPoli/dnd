{% extends 'base_admin.html.twig' %}

{% block header_title %}Editar Condição{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <div class="mb-8 flex items-center justify-between">
        <div>
            <a href="{{ path('admin_condition_index') }}" class="text-slate-400 hover:text-primary transition-colors flex items-center space-x-2 text-sm font-bold uppercase tracking-widest">
                {{ ux_icon('lucide:arrow-left', {class: 'w-4 h-4'}) }}
                <span>Voltar para Lista</span>
            </a>
            <h1 class="text-3xl font-bold mt-4 dark:text-white">Editar: {{ condition.name }}</h1>
            <p class="text-slate-500">Ajuste os detalhes desta condição.</p>
        </div>
        
        <div class="flex items-center space-x-3">
            {{ include('admin/condition/_delete_form.html.twig') }}
        </div>
    </div>

    <div class="bg-white dark:bg-slate-900 rounded-3xl border border-border p-8 shadow-sm">
        {{ include('admin/condition/_form.html.twig', {'button_label': 'Atualizar Condição'}) }}
    </div>
</div>
{% endblock %}
