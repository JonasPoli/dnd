{{ form_start(form) }}
    {# Basic Information Section #}
    <div class="bg-white dark:bg-slate-900 rounded-3xl border border-border p-6 mb-6">
        <h3 class="text-lg font-bold mb-4 flex items-center space-x-2 text-slate-900 dark:text-white">
            {{ ux_icon('lucide:info', {class: 'w-5 h-5 text-primary'}) }}
            <span>Informações Básicas</span>
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                {{ form_row(form.name, {
                    'label_attr': {'class': 'block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2'},
                    'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}
                }) }}
            </div>
            <div>
                {{ form_row(form.ruleSlug, {
                    'label_attr': {'class': 'block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2'},
                    'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}
                }) }}
            </div>
            <div>
                {{ form_row(form.type, {
                    'label_attr': {'class': 'block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2'},
                    'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}
                }) }}
            </div>
            <div>
                {{ form_row(form.subtype, {
                    'label_attr': {'class': 'block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2'},
                    'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}
                }) }}
            </div>
            <div>
                {{ form_row(form.group, {
                    'label_attr': {'class': 'block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2'},
                    'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}
                }) }}
            </div>
            <div>
                {{ form_row(form.size, {
                    'label_attr': {'class': 'block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2'},
                    'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}
                }) }}
            </div>
            <div>
                {{ form_row(form.alignment, {
                    'label_attr': {'class': 'block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2'},
                    'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}
                }) }}
            </div>
            <div>
                {{ form_row(form.rulesSource, {
                    'label_attr': {'class': 'block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2'},
                    'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}
                }) }}
            </div>
        </div>
    </div>

    {# Combat Stats Section #}
    <div class="bg-white dark:bg-slate-900 rounded-3xl border border-border p-6 mb-6">
        <h3 class="text-lg font-bold mb-4 flex items-center space-x-2 text-slate-900 dark:text-white">
            {{ ux_icon('lucide:swords', {class: 'w-5 h-5 text-red-500'}) }}
            <span>Estatísticas de Combate</span>
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2">
                    <span data-controller="tooltip" data-tooltip-text-value="Challenge Rating: Nível de desafio (0-30)" data-action="mouseenter->tooltip#show mouseleave->tooltip#hide">CR</span>
                </label>
                {{ form_widget(form.challengeRating, {
                    'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}
                }) }}
            </div>
            <div>
                <label class="block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2">
                    <span data-controller="tooltip" data-tooltip-text-value="Armor Class: Dificuldade para acertar" data-action="mouseenter->tooltip#show mouseleave->tooltip#hide">AC</span>
                </label>
                {{ form_widget(form.armorClass, {
                    'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}
                }) }}
            </div>
            <div>
                <label class="block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2">Armor Desc</label>
                {{ form_widget(form.armorDesc, {
                    'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}
                }) }}
            </div>
            <div>
                <label class="block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2">
                    <span data-controller="tooltip" data-tooltip-text-value="Hit Points: Pontos de vida" data-action="mouseenter->tooltip#show mouseleave->tooltip#hide">HP</span>
                </label>
                {{ form_widget(form.hitPoints, {
                    'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}
                }) }}
            </div>
            <div>
                {{ form_row(form.hitDice, {
                    'label_attr': {'class': 'block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2'},
                    'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}
                }) }}
            </div>
        </div>
    </div>

    {# Ability Scores Section #}
    <div class="bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-800 dark:to-slate-900 rounded-3xl border border-border p-6 mb-6">
        <h3 class="text-lg font-bold mb-4 flex items-center space-x-2 text-slate-900 dark:text-white">
            {{ ux_icon('lucide:zap', {class: 'w-5 h-5 text-yellow-500'}) }}
            <span>Atributos</span>
        </h3>
        <div class="grid grid-cols-2 md:grid-cols-6 gap-3">
            {% set ability_classes = 'w-full px-3 py-2 bg-white dark:bg-slate-800 border-2 border-slate-300 dark:border-slate-600 rounded-xl text-center font-bold text-lg focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none' %}
            <div class="text-center">
                <label class="block text-[10px] font-bold uppercase tracking-wider text-slate-500 mb-2">FOR</label>
                {{ form_widget(form.strength, {'attr': {'class': ability_classes}}) }}
            </div>
            <div class="text-center">
                <label class="block text-[10px] font-bold uppercase tracking-wider text-slate-500 mb-2">DES</label>
                {{ form_widget(form.dexterity, {'attr': {'class': ability_classes}}) }}
            </div>
            <div class="text-center">
                <label class="block text-[10px] font-bold uppercase tracking-wider text-slate-500 mb-2">CON</label>
                {{ form_widget(form.constitution, {'attr': {'class': ability_classes}}) }}
            </div>
            <div class="text-center">
                <label class="block text-[10px] font-bold uppercase tracking-wider text-slate-500 mb-2">INT</label>
                {{ form_widget(form.intelligence, {'attr': {'class': ability_classes}}) }}
            </div>
            <div class="text-center">
                <label class="block text-[10px] font-bold uppercase tracking-wider text-slate-500 mb-2">SAB</label>
                {{ form_widget(form.wisdom, {'attr': {'class': ability_classes}}) }}
            </div>
            <div class="text-center">
                <label class="block text-[10px] font-bold uppercase tracking-wider text-slate-500 mb-2">CAR</label>
                {{ form_widget(form.charisma, {'attr': {'class': ability_classes}}) }}
            </div>
        </div>
    </div>

    {# Description Section #}
    <div class="bg-white dark:bg-slate-900 rounded-3xl border border-border p-6 mb-6">
        <h3 class="text-lg font-bold mb-4 flex items-center space-x-2 text-slate-900 dark:text-white">
            {{ ux_icon('lucide:file-text', {class: 'w-5 h-5 text-blue-500'}) }}
            <span>Descrição</span>
        </h3>
        {{ form_row(form.descriptionMd, {
            'label': false,
            'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none font-mono text-sm', 'rows': 8, 'placeholder': 'Descrição do monstro em Markdown...'}
        }) }}
    </div>

    {# Action Buttons #}
    <div class="flex items-center justify-between bg-slate-50 dark:bg-slate-800/50 rounded-2xl p-6 border border-border">
        <a href="{{ path('admin_monster_index') }}" class="px-6 py-3 rounded-xl font-semibold text-slate-600 dark:text-slate-400 hover:bg-white dark:hover:bg-slate-700 transition-all flex items-center space-x-2">
            {{ ux_icon('lucide:arrow-left', {class: 'w-4 h-4'}) }}
            <span>Cancelar</span>
        </a>
        <button type="submit" class="bg-primary text-white px-8 py-3 rounded-xl font-bold shadow-lg shadow-primary/25 hover:bg-primary/90 hover:scale-[1.02] active:scale-[0.98] transition-all flex items-center space-x-2">
            {{ ux_icon('lucide:save', {class: 'w-5 h-5'}) }}
            <span>{{ button_label|default('Salvar Monstro') }}</span>
        </button>
    </div>
    {# Saving Throws Section #}
    <div class="bg-white dark:bg-slate-900 rounded-3xl border border-border p-6 mb-6">
        <h3 class="text-lg font-bold mb-4 flex items-center space-x-2 text-slate-900 dark:text-white">
            {{ ux_icon('lucide:shield', {class: 'w-5 h-5 text-green-500'}) }}
            <span>Testes de Resistência</span>
        </h3>
        <div class="grid grid-cols-2 md:grid-cols-6 gap-3">
            {% set save_classes = 'w-full px-3 py-2 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl text-center font-bold text-sm focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none' %}
            <div class="text-center">
                <label class="block text-[10px] font-bold uppercase tracking-wider text-slate-400 mb-2">Str Save</label>
                {{ form_widget(form.strengthSave, {'attr': {'class': save_classes}}) }}
            </div>
            <div class="text-center">
                <label class="block text-[10px] font-bold uppercase tracking-wider text-slate-400 mb-2">Dex Save</label>
                {{ form_widget(form.dexteritySave, {'attr': {'class': save_classes}}) }}
            </div>
            <div class="text-center">
                <label class="block text-[10px] font-bold uppercase tracking-wider text-slate-400 mb-2">Con Save</label>
                {{ form_widget(form.constitutionSave, {'attr': {'class': save_classes}}) }}
            </div>
            <div class="text-center">
                <label class="block text-[10px] font-bold uppercase tracking-wider text-slate-400 mb-2">Int Save</label>
                {{ form_widget(form.intelligenceSave, {'attr': {'class': save_classes}}) }}
            </div>
            <div class="text-center">
                <label class="block text-[10px] font-bold uppercase tracking-wider text-slate-400 mb-2">Wis Save</label>
                {{ form_widget(form.wisdomSave, {'attr': {'class': save_classes}}) }}
            </div>
            <div class="text-center">
                <label class="block text-[10px] font-bold uppercase tracking-wider text-slate-400 mb-2">Cha Save</label>
                {{ form_widget(form.charismaSave, {'attr': {'class': save_classes}}) }}
            </div>
        </div>
        <div class="mt-4">
             {{ form_row(form.perception, {
                'label_attr': {'class': 'block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2'},
                'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}
            }) }}
        </div>
    </div>

    {# Advanced Data Section #}
    <div class="bg-white dark:bg-slate-900 rounded-3xl border border-border p-6 mb-6">
        <h3 class="text-lg font-bold mb-4 flex items-center space-x-2 text-slate-900 dark:text-white">
            {{ ux_icon('lucide:code', {class: 'w-5 h-5 text-purple-500'}) }}
            <span>Dados Avançados (JSON)</span>
        </h3>
        <div class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {{ form_row(form.speedJson, {'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none font-mono text-xs', 'rows': 4}}) }}
                {{ form_row(form.skillsJson, {'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none font-mono text-xs', 'rows': 4}}) }}
            </div>
            
            {{ form_row(form.specialAbilitiesJson, {'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none font-mono text-xs', 'rows': 6}}) }}
            {{ form_row(form.actionsJson, {'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none font-mono text-xs', 'rows': 6}}) }}
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {{ form_row(form.bonusActionsJson, {'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none font-mono text-xs', 'rows': 4}}) }}
                {{ form_row(form.reactionsJson, {'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none font-mono text-xs', 'rows': 4}}) }}
            </div>

            {{ form_row(form.legendaryDesc, {'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none', 'rows': 2}}) }}
            {{ form_row(form.legendaryActionsJson, {'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none font-mono text-xs', 'rows': 4}}) }}
            
            {{ form_row(form.environments, {'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none font-mono text-xs', 'rows': 2}}) }}
        </div>
    </div>

    {# Immunities & Resistances #}
    <div class="bg-white dark:bg-slate-900 rounded-3xl border border-border p-6 mb-6">
        <h3 class="text-lg font-bold mb-4 flex items-center space-x-2 text-slate-900 dark:text-white">
            {{ ux_icon('lucide:shield-alert', {class: 'w-5 h-5 text-orange-500'}) }}
            <span>Resistências e Imunidades</span>
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {{ form_row(form.damageResistances, {'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}}) }}
            {{ form_row(form.damageImmunities, {'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}}) }}
            {{ form_row(form.damageVulnerabilities, {'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}}) }}
            {{ form_row(form.conditionImmunities, {'attr': {'class': 'block w-full px-4 py-3 bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none'}}) }}
        </div>
    </div>

    {{ form_end(form) }}
