{% extends 'base_admin.html.twig' %}

{% block header_title %}Personagens{% endblock %}

{% block body %}
<div class="mb-8 flex items-center justify-between">
    <div>
        <h1 class="text-2xl font-bold dark:text-white">Gerenciamento de Personagens</h1>
        <p class="text-slate-500 text-sm">Visualize e gerencie as instâncias de personagens criadas.</p>
    </div>
    <a href="{{ path('admin_character_new') }}" class="bg-primary text-white px-6 py-3 rounded-2xl font-bold shadow-lg shadow-primary/25 hover:bg-primary/90 transition-all flex items-center space-x-2">
        {{ ux_icon('lucide:plus', {class: 'w-5 h-5'}) }}
        <span>Novo Personagem</span>
    </a>
</div>

<div class="bg-white dark:bg-slate-900 rounded-3xl border border-border overflow-hidden shadow-sm">
    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead>
                <tr class="bg-slate-50 dark:bg-slate-800/50 border-b border-border">
                    <th class="px-8 py-5 text-[10px] font-bold uppercase tracking-widest text-slate-400">Nome / Nível</th>
                    <th class="px-8 py-5 text-[10px] font-bold uppercase tracking-widest text-slate-400">Raça / Classe</th>
                    <th class="px-8 py-5 text-[10px] font-bold uppercase tracking-widest text-slate-400">Criado em</th>
                    <th class="px-8 py-5 text-[10px] font-bold uppercase tracking-widest text-slate-400 text-right">Ações</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-border">
                {% for character in characters %}
                    <tr class="hover:bg-slate-50/50 dark:hover:bg-slate-800/30 transition-colors">
                        <td class="px-8 py-5">
                            <div class="font-bold text-slate-900 dark:text-white">{{ character.name }}</div>
                            <div class="text-xs text-slate-400">Nível {{ character.level }}</div>
                        </td>
                        <td class="px-8 py-5">
                            <div class="text-sm font-medium">{{ character.species.name ?? 'Sem Raça' }}</div>
                            <div class="text-xs text-slate-400">{{ character.classDef.name ?? 'Sem Classe' }}</div>
                        </td>
                        <td class="px-8 py-5">
                            <span class="text-xs text-slate-500">{{ character.createdAt|date('d/m/Y H:i') }}</span>
                        </td>
                        <td class="px-8 py-5 text-right">
                            <div class="flex items-center justify-end space-x-3">
                                <a href="{{ path('admin_character_edit', {'id': character.id}) }}" class="p-2 bg-slate-100 dark:bg-slate-800 rounded-xl text-slate-500 hover:text-primary transition-colors">
                                    {{ ux_icon('lucide:edit-3', {class: 'w-5 h-5'}) }}
                                </a>
                                {{ include('admin/character/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="px-8 py-12 text-center text-slate-400">
                            Nenhum personagem encontrado.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
